<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The INTERNET permission is required for development. Specifically,
         the Flutter tool needs it to communicate with the running application
         to allow setting breakpoints, to provide hot reload, etc.
    -->
    <uses-permission android:name="android.permission.INTERNET" android:exported="true"/>

    <!-- Add the android:exported attribute for the receiver -->
    <application>
        <receiver
            android:name="com.dexterous.flutterlocalnotifications.ScheduledNotificationBootReceiver"
            android:exported="true">
            <!-- Intent filter and other receiver configurations -->
        </receiver>
        <!-- Other components and configurations -->
    </application>
</manifest>